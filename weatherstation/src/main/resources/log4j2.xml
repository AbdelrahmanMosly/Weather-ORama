<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="com.weatherorama.Main" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
   <Logger name="com.weatherorama.weatherstation.services.WeatherStation" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="com.weatherorama.centralstation.mocks.MockCentralStation" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="com.weatherorama.weatherstation.mocks.MockWeatherSensor" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
  
    <Root level="error">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>